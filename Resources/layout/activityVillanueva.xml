<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

     <ImageView
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/imageView1"
        android:layout_margin="50px"
        android:layout_gravity="center"/>

    <TextView
        android:text="Member Name: "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:id="@+id/nameTextView1"
        android:layout_gravity="left"
        android:textStyle="bold"
        android:textSize="33px" />


     <TextView
        android:text="Villanueva, Zhen Marie G."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/nameTextView2"
        android:layout_marginLeft="50px"
        android:layout_gravity="left" />
    <TextView
        android:text="Member Program: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/progTextView1"
        android:layout_marginTop="50px"
        android:layout_marginLeft="50px"
        android:layout_gravity="left"
        android:textStyle="bold"
        android:textSize="33px"  />
    <TextView
        android:text="BSCS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/progTextView2"
        android:layout_marginLeft="50px"
        android:layout_gravity="left" />
    <TextView
        android:text="Member Contact Number:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/numberTextView1" 
        android:layout_marginTop="50px"
        android:layout_marginLeft="50px"
        android:layout_gravity="left"
        android:textStyle="bold"
        android:textSize="33px" />
    <TextView
        android:text="0919-315-5654"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/numberTextView2"
        android:layout_marginLeft="50px"
        android:layout_gravity="left" />
    <TextView
        android:text="Member Facebook URL: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fbLink1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="50px"
        android:layout_marginLeft="50px"
        android:layout_gravity="left"
        android:textStyle="bold"
        android:textSize="33px" />
    <TextView
        android:text="https://www.facebook.com/YUK1T0R1/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/fbLink2"
        android:layout_marginLeft="50px"
        android:layout_gravity="left"
        android:autoLink="web"
        android:linksClickable="true" />

</LinearLayout>
